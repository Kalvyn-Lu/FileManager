root: true

env:
  browser: true
  es6: true
  # To support webpack require()s in code:
  amd: true

extends: eslint:recommended

parser: babel-eslint

globals:
  Observable: true

ecmaFeatures:
  arrowFunctions: true
  blockBindings: true
  classes: true
  defaultParams: true
  destructuring: true
  forOf: true
  generators: true
  modules: true
  objectLiteralComputedProperties: true
  objectLiteralShorthandMethods: true
  objectLiteralShorthandProperties: true
  regexUFlag: true
  regexYFlag: true
  spread: true
  templateStrings: true

rules:
  accessor-pairs: 2
  array-bracket-spacing: [2, "never"]
  arrow-spacing: [2, {before: true, after: true}]
  brace-style: [2, "1tbs"]
  camelcase: [2, {properties: "always"}]
  comma-dangle: [1, "never"]
  comma-spacing: [2, {after: true, before: false}]
  comma-style: [2, "last"]
  consistent-return: 1
  consistent-this: [1, "self"]
  constructor-super: 2
  curly: [2, "all"]
  default-case: 2
  dot-notation: [2, {allowKeywords: true}]
  dot-location: [2, "property"]
  eol-last: 2
  eqeqeq: 2
  func-style: [2, "declaration"]
  generator-star-spacing: [2, "after"]
  guard-for-in: 2
  indent: [1, 4, {SwitchCase: 1}]
  key-spacing: [2, {afterColon: true, beforeColon: false}]
  new-cap: [2, {newIsCap: true, capIsNew: false}]
  new-parens: 2
  no-alert: 2
  no-array-constructor: 2
  no-caller: 2
  no-cond-assign: [2, "except-parens"]
  no-constant-condition: 1
  no-control-regex: 2
  no-const-assign: 2
  no-class-assign: 2
  no-debugger: 2
  no-delete-var: 2
  no-dupe-args: 2
  no-duplicate-case: 2
  no-empty-character-class: 2
  no-empty-label: 2
  no-empty: 1
  no-eval: 2
  no-ex-assign: 2
  no-extend-native: 2
  no-extra-bind: 2
  no-extra-boolean-cast: 1
  no-extra-parens: [2, "functions"]
  no-extra-semi: 1
  no-eq-null: 2
  no-fallthrough: 2
  no-floating-decimal: 2
  no-func-assign: 2
  no-implied-eval: 2
  no-invalid-regexp: 2
  no-irregular-whitespace: 2
  no-iterator: 2
  no-label-var: 2
  no-labels: 2
  no-lone-blocks: 2
  no-loop-func: 2
  no-mixed-spaces-and-tabs: [2, false]
  no-multi-spaces: 2
  no-multi-str: 2
  no-multiple-empty-lines: [1, {max: 1}]
  no-native-reassign: 2
  no-negated-in-lhs: 2
  no-nested-ternary: 2
  no-new-func: 2
  no-new-object: 2
  no-new-require: 2
  no-new-wrappers: 2
  no-new: 2
  no-obj-calls: 2
  no-octal-escape: 2
  no-octal: 2
  no-path-concat: 2
  no-process-exit: 2
  no-proto: 2
  no-redeclare: 2
  no-regex-spaces: 2
  no-return-assign: 2
  no-script-url: 2
  no-sequences: 2
  no-shadow-restricted-names: 2
  no-shadow: 2
  no-spaced-func: 2
  no-self-compare: 2
  no-this-before-super: 2
  no-throw-literal: 2
  no-trailing-spaces: 1
  no-undef-init: 2
  no-undef: 2
  no-unexpected-multiline: 2
  no-unreachable: 2
  no-unused-expressions: 2
  no-unused-vars: [2, {args: "after-used", vars: "all"}]
  no-use-before-define: 2
  no-var: 2
  no-void: 2
  no-with: 2
  object-curly-spacing: [1, "never"]
  object-shorthand: [1, "always"]
  prefer-spread: 1
  quotes: [2, "single", "avoid-escape"]
  radix: 2
  require-yield: 2
  semi-spacing: [2, {after: true, before: false}]
  semi: [2, "always"]
  space-after-keywords: [2, "always"]
  space-before-blocks: [2, "always"]
  space-before-function-paren: [2, "never"]
  space-in-parens: [1, "never"]
  space-infix-ops: 2
  space-return-throw-case: 2
  space-unary-ops: [2, {nonwords: false, words: true}]
  spaced-comment: [2, "always", {markers: ["/"]}]
  strict: [2, "never"]
  use-isnan: 2
  valid-jsdoc: [2, prefer: {return: "returns"}]
  valid-typeof: 2
  wrap-iife: [2, "outside"]
  yoda: [2, "never"]
